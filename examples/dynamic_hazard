from circuit import Circuit
from simulators.two_list import TwoListSimulator

c = Circuit()
c.set_primary_inputs(['A','B'])
c.set_primary_outputs(['Y'])

c.add_gate('XOR',['A','B'],'X1')
c.add_gate('NOT',['X1'],'Y')

sim = TwoListSimulator(c)

sim.simulate_vector({'A':'0','B':'0'})
sim.simulate_vector({'A':'1','B':'1'})

print("Hazards:", sim.hazards)
